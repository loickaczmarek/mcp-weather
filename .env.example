# üå§Ô∏è MCP Weather Server - Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# üöÄ Server Configuration
# =============================================================================

# Server port (default: 3000, range: 1-65535)
PORT=3000

# Server host address (default: 0.0.0.0)
HOST=0.0.0.0

# Environment mode: development, production, test (default: development)
NODE_ENV=development

# =============================================================================
# üîê CORS Configuration
# =============================================================================

# CORS allowed origins (default: *)
# Examples: "https://claude.ai", "http://localhost:3000", "*"
CORS_ORIGIN=*

# Enable CORS credentials (default: true)
CORS_CREDENTIALS=true

# =============================================================================
# üìù Logging Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=INFO

# Log format: json, text (default: text)
# Use 'json' for production environments and log aggregation
LOG_FORMAT=text

# Enable structured logging (default: true)
ENABLE_STRUCTURED_LOGS=true

# =============================================================================
# ‚ö° Performance Configuration
# =============================================================================

# Request timeout in milliseconds (default: 30000, range: 1000-300000)
REQUEST_TIMEOUT=30000

# Maximum request body size (default: 10mb)
MAX_REQUEST_SIZE=10mb

# Enable response compression (default: true)
ENABLE_COMPRESSION=true

# =============================================================================
# üíæ Cache Configuration
# =============================================================================

# Enable response caching (default: true)
CACHE_ENABLED=true

# Default cache TTL in seconds (default: 600, range: 60-86400)
# 600 = 10 minutes, 3600 = 1 hour, 86400 = 24 hours
DEFAULT_CACHE_TTL=600

# Maximum cache entries (default: 1000, range: 10-10000)
MAX_CACHE_SIZE=1000

# =============================================================================
# üîß API Configuration
# =============================================================================

# Maximum API results per request (default: 20, range: 1-100)
MAX_RESULTS_LIMIT=20

# Enable rate limiting (default: false)
# Note: Currently implemented at proxy/load balancer level
RATE_LIMIT_ENABLED=false

# =============================================================================
# üè• Health & Monitoring
# =============================================================================

# Health check interval in milliseconds (default: 30000)
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# üõ°Ô∏è Graceful Shutdown
# =============================================================================

# Graceful shutdown timeout in milliseconds (default: 10000)
SHUTDOWN_TIMEOUT=10000

# Keep-alive timeout in milliseconds (default: 5000)
KEEP_ALIVE_TIMEOUT=5000

# =============================================================================
# üéØ Production Examples
# =============================================================================

# Production Configuration Example:
# NODE_ENV=production
# LOG_LEVEL=WARN
# LOG_FORMAT=json
# REQUEST_TIMEOUT=15000
# CACHE_ENABLED=true
# DEFAULT_CACHE_TTL=1800
# CORS_ORIGIN=https://your-domain.com

# Development Configuration Example:
# NODE_ENV=development
# LOG_LEVEL=DEBUG
# LOG_FORMAT=text
# REQUEST_TIMEOUT=30000
# CACHE_ENABLED=true
# DEFAULT_CACHE_TTL=300

# Docker Configuration Example:
# HOST=0.0.0.0
# PORT=3000
# NODE_ENV=production
# LOG_FORMAT=json
# ENABLE_COMPRESSION=true